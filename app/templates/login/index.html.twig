{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="wrapper">
        <div class="container-img">
            <img src="{{ asset('build/images/sign_in_background_laptop.jpg') }}" alt="Laptop signIn Background">
        </div>

        <div class="container-form">
            <div class="sign-in-btn">
                <a href="{{ path('app_register') }}">Sign up</a>
            </div>

            <div class="register-form">
                <form action="{{ path('app_login') }}" method="post">
                    <h1 class="sign-in-title">Sign in</h1>

                    <div>
                        <input type="text" name="_username" id="username" value="{{ last_username }}" placeholder="Email">
                    </div>

                    <div>
                        <input type="password" name="_password" id="password" placeholder="Password">
                    </div>

                    <button type="submit" class="btn-sign-in">Sign in</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
